@page "/seating"

<PageTitle>Seating Charts</PageTitle>

<h1 style="text-align: center;">Trombone Seating Charts</h1>

<!-- Navigation Buttons -->
<div class="chart-nav">
    <button @onclick="@(() => SelectChart("split"))">M/G Split</button>
    <button @onclick="@(() => SelectChart("mrh"))">MRH</button>
    <button @onclick="@(() => SelectChart("parade"))">Parade</button>
    <button @onclick="@(() => SelectChart("gsr"))">GSR</button>
    <button @onclick="@(() => SelectChart("blockband"))">Block Band</button>
    <button @onclick="@(() => SelectChart("ppa"))">PPA Groups</button>
    <button @onclick="@(() => SelectChart("section"))">Sectionals</button>
    <button class="show-all-btn" @onclick="@(() => SelectChart(string.Empty))">Show All</button>

</div>

<!-- Chart Images -->
<div style="width: 100%; display: flex; flex-direction: column; align-items: center; gap: 90px;">
    @foreach (var chart in chartData)
    {
        if (string.IsNullOrEmpty(selectedChart) || chart.Id == selectedChart)
        {
            <div class="chart-container">
                <div class="chart-title">@chart.Title</div>
                <img src="@chart.ImagePath" alt="@chart.Title" />
            </div>
        }
    }
</div>

@code {
    private string selectedChart = string.Empty;

    private void SelectChart(string id)
    {
        selectedChart = id;
    }

    private List<ChartInfo> chartData = new()
    {
        new ChartInfo { Id = "split", Title = "Maroon/Gold Split", ImagePath = "img/charts/split.png" },
        new ChartInfo { Id = "mrh", Title = "MRH", ImagePath = "img/charts/mrh.png" },
        new ChartInfo { Id = "parade", Title = "Parade", ImagePath = "img/charts/parade.png" },
        new ChartInfo { Id = "gsr", Title = "GSR", ImagePath = "img/charts/gsr.png" },
        new ChartInfo { Id = "blockband", Title = "Block Band", ImagePath = "img/charts/blockband.png" },
        new ChartInfo { Id = "ppa", Title = "PPA Groups", ImagePath = "img/charts/ppa.png" },
        new ChartInfo { Id = "section", Title = "Sectionals", ImagePath = "img/charts/sectional.png" }

    };

    public class ChartInfo
    {
        public required string Id { get; set; }
        public required string Title { get; set; }
        public required string ImagePath { get; set; }
    }
}
